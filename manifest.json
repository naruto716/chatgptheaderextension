{
  "name": "ChatGPT No Tracking",
  "version": "1.6.0",
  "manifest_version": 3,
  "description": "Enhance your ChatGPT journey with advanced session management and personalized conversation filtering. Disable tracking and improve your privacy.",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "declarativeNetRequestFeedback",
    "storage"
  ],
  "host_permissions": [
    "https://chatgpt.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}