{
  "name": "ChatGPT Account Sharing Bypass",
  "version": "1.3.1",
  "manifest_version": 2,
  "description": "Bypass OpenAI's account sharing detection with spoofed device ID and IP address",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "proxy",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}