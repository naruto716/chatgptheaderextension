{
  "name": "Request Modifier Extension",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Bypass OpenAI's account sharing detection by modifying request headers.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "proxy",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}